@using System.Data;
@model DataTable
@{
    ViewBag.Title = "Pendientes | TuTransporte";
    Layout = "~/Views/Shared/MasterAdministracion.cshtml";
}

<center><h2 class="to-animate">Gestión de denuncias pendientes</h2></center>
<br />
<table table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Motivo</th>
            <th>Fecha</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>
                    <input type="text" class="form-control" value="@row["Motivo"]">
                </td>
                <td>
                    <input type="text" class="form-control" value="@row["FechaHora"]">
                </td>
                <td>
                    <a href="@Url.Action("PendientesDatos", "Administracion")/@row["Id"]" type="button" class="btn btn-info">Ver más</a>
                </td>
            </tr>
        }
    </tbody>
</table>
