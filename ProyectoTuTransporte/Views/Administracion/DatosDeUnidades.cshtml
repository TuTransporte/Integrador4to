@using System.Data;
@using ProyectoTuTransporte.BO;
@model DataTable

@{
    ViewBag.Title = "Datos de unidades | TuTransporte";
    Layout = "~/Views/Shared/MasterAdministracion.cshtml";
}

@foreach (DataRow row in Model.Rows)
{
    <center><h2 class="category">Datos de las unidades</h2></center>
    <div class="col-md-8">
        <div class="card">
            <div class="header">
                <h4 class="title">Editar Unidades</h4>
            </div>
            <div class="content">
                @using (Html.BeginForm("ModificarUnidades", "Administracion", FormMethod.Post))
                {
                    <form>
                        <input value="@row["Id"]" id="txtId" name="txtId" type="text" class="form-control" style="visibility:hidden;" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Número de serie</label>
                                    <input value="@row["Serie"]" id="txtSerie" name="txtSerie" type="text" class="form-control" placeholder="Nombre(s) del empleado">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Matrícula</label>
                                    <input value="@row["Matricula"]" id="txtMatricula" name="txtMatricula" type="text" class="form-control" placeholder="Apellido paterno">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Comentarios</label>
                                    <textarea class="form-control" placeholder="Comentarios" rows="4" cols="50" style="resize:none;" id="txtComentarios" name="txtComentarios">@row["Comentarios"]</textarea>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-3">
                                <a href="/Administracion/GestionUnidades" class="btn btn-danger">Cancelar</a>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-info btn-fill pull-right">Actualizar Información</button>
                                @*<button type="submit" class="btn btn-info btn-fill pull-right">Actualizar perfil</button>*@
                            </div>
                            <div class="col-md-3">
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-danger btn-fill pull-right" data-toggle="modal" data-target="#myModal" onclick="Mensaje(); Cuerpo()">
                                    Eliminar Unidad
                                </button>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card card-user">
            <div class="image">
                <img src="http://informatyucatan.com/wp-content/uploads/unidades-situr.jpg" alt="..." />
            </div>

        </div>
    </div>
}
