@using System.Data;
@model DataTable
@{
    ViewBag.Title = "Datos del Usuario | TuTransporte";
    Layout = "~/Views/Shared/MasterAdministracion.cshtml";
}

@foreach (DataRow row in Model.Rows)
{
    <center><h2 class="category">Editar perfil de @row["Nombres"]</h2></center>
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="header">
                <h4 class="title">Editar perfil</h4>
            </div>
            <div class="content">
                @using (Html.BeginForm("ModificarEmpleado", "Administracion", FormMethod.Post))
                {
                    <form>
                        <input value="@row["Id"]" id="txtId" name="txtId" type="text" class="form-control" style="visibility:hidden;" />
                        @*@*<div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Puesto</label>
                                        <input type="text" class="form-control" disabled placeholder="Company" value="Chofer">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label>Unidad del empleado</label>
                                    <div class="form-group" id="contenedor">
                                        <!--DROPDOWNFOR PARTIAL VIEW -->
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label>Turno</label>
                                    <div class="form-group" id="turnosEmp">
                                        <!--DROPDOWNFOR PARTIAL VIEW -->
                                    </div>
                                </div>
                            </div>*@
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Nombre</label>
                                    <input id="txtNombres" name="txtNombres" type="text" class="form-control" placeholder="Nombre de la concesionaria" required value="@row["Nombres"]">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Horario</label>
                                    <input id="txtHorario" name="txtHorario" type="text" class="form-control" placeholder="Horario" required value="@row["Horario"]">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Teléfono</label>
                                    <input id="txtTelefono" name="txtTelefono" type="tel" class="form-control" placeholder="Teléfono" required value="@row["Telefono"]">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Dirección</label>
                                    <input id="txtDireccion" name="txtDireccion" type="text" class="form-control" placeholder="Dirección del empleado" required value="@row["Direccion"]">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Razón Social</label>
                                    <textarea id="txtRazon" name="txtRazon" type="text" class="form-control" placeholder="Razón social" required>@row["RazonSocial"]</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>RFC</label>
                                    <input id="txtRFC" name="txtRFC" type="text" class="form-control" placeholder="RFC" required value="@row["RFC"]">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Correo</label>
                                    <input id="txtCorreo" name="txtCorreo" type="email" class="form-control" placeholder="Correo" required value="@row["Correo_usuario"]">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Contraseña</label>
                                    <input id="txtContrasena" name="txtContrasena" type="password" class="form-control" placeholder="txtContrasena" required value="@row["Contrasena"]">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-3">
                                <a href="/Administracion/GestionEmpleados" class="btn btn-danger">Cancelar</a>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-info btn-fill pull-right">Actualizar perfil</button>
                            </div>
                            <div class="col-md-3">
                                <button type="button" class="btn btn-danger btn-fill pull-right" data-toggle="modal" data-target="#ModalEmp" onclick="MensajeEmp(); CuerpoEmp()">Eliminar perfil</button>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                }
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
    @*<div class="col-md-4">
        <div class="card card-user">
            <div class="image">
                <img src="http://informatyucatan.com/wp-content/uploads/unidades-situr.jpg" alt="..." />
            </div>
            <div class="content">
                <div class="author">
                    <a href="#">
                        <img class="avatar border-gray" src="/Content/MasterResources/assets/img/faces/default-avatar.png" />
                        <h4 class="title">
                            @row["Nombres"]<br />
                            <small>@row["Telefono"]</small>
                        </h4>
                    </a>
                </div>
                <p class="description text-center">
                </p>
                <hr>
                <div class="text-center">
                </div>
            </div>
        </div>
    </div>*@
}
<script src="/Content/MasterResources/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
<script type="text/javascript">
    (function () {
        $("#contenedor").load('/Administracion/select_unidades');
        $("#turnosEmp").load('/Administracion/select_turnos');
    }());
</script>
