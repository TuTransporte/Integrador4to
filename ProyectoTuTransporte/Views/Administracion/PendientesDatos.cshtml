@using System.Data;
@model DataTable
@{
    ViewBag.Title = "PendientesDatos";
    Layout = "~/Views/Shared/MasterAdministracion.cshtml";
}

@foreach (DataRow row in Model.Rows)
{
    <center><h2 class="category">Gestión de denuncias pendientes</h2></center>

    <div id="pdfdiv" class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="header">
                    <h4 class="title">Información de denuncia</h4>
                    <p class="category"></p>
                </div>

                <div class="content">
                    @using (Html.BeginForm("ApDenuncia", "Administracion", FormMethod.Post))
                    {
                        <input value="@row["Id"]" id="txtId" name="txtId" type="text" class="form-control" style="visibility:hidden;" />
                        //<input value="@row["Estado"]" id="txtEst" name="txtEst" type="text" class="form-control" style="visibility:hidden;" />
                        <div class="panel panel-info">
                            <!-- Default panel contents -->
                            <div class="panel-heading"><label>Denuncia</label></div>
                            <input value="@row["FechaHora"]" id="txtSerie" name="txtSerie" type="text" class="form-control" placeholder="Nombre(s) del empleado">


                            <div class="panel-body">
                                <textarea id="txtSerie" name="txtSerie" type="text" class="form-control" style="resize:unset;">@row["Denuncia"]</textarea>
                            </div>
                            <!-- List group -->
                            <ul class="list-group">
                                <li class="list-group-item"></li>
                            </ul>
                            <div class="list-group">
                                <br />
                                <center>
                                    <a id="hide1" class="btn-link" href="javascript:genPDF()" role="button">Descargar PDF</a>
                                    <button id="hide2" type="submit" class="btn btn-info">Aprobar</button>
                                    <button id="hide3" type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal2" onclick="MensajeRech();">
                                        Rechazar
                                    </button>
                                </center>
                                <br />
                            </div>
                        </div>
                    }
                    <div class="footer">
                        <div class="legend">
                        </div>
                        <hr>
                        <div class="stats">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function genPDF() {
            html2canvas(document.getElementById("pdfdiv")).then(function (canvas) {
                var img = canvas.toDataURL('image/png');
                var imgData = 'data:image/jpeg;base64,/9j/4AAQSkZJ';
                var doc = new jsPDF();

                doc.setFontSize(20);
                doc.text(35, 25, 'TuTransporte');
                doc.addImage(img, 'JPEG', 20, 40);                
                doc.save('test.pdf');
            });
        }
        

    </script>
}
