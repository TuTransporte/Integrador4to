@using System.Data;
@model DataTable
@{
    ViewBag.Title = "Aprobadas";
    Layout = "~/Views/Shared/MasterAdministracion.cshtml";
}

<center><h2 class="category">Gestión de denuncias aprobadas</h2></center>
<br />
<table table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Denuncia</th>
            <th>Fecha</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    @using (Html.BeginForm("Aprobadas", "Administracion", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td>
                        <input type="text" class="form-control" value="@row["Denuncia"]">
                    </td>
                    <td>
                        <input type="text" class="form-control" value="@row["FechaHora"]">
                    </td>
                    <td>
                        <a href="@Url.Action("AprobadasDatos", "Administracion")/@row["Id"]" type="button" class="btn btn-info">Ver más</a>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
