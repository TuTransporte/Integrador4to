@using System.Data;
@model DataTable
@{

    Layout = "~/Views/Administracion/GestionEmpleados.cshtml";
}

<center><h2 class="category">Gestión de empleados</h2></center>
<a href="~/Administracion/AgregarEmpleado" type="button" class="btn btn-link">Agregar Nuevo</a>
<a></a>
<a href="~/Administracion/ReportesEmp" type="button" class="btn btn-link">Reporte de empleados</a>

<table table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Turno</th>
            <th> </th>
        </tr>
    </thead>
    @using (Html.BeginForm("GestionEmpleados", "Administracion", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td>
                        <input type="text" class="form-control" value="@row["Nombre"]">
                    </td>
                    <td>
                        <input type="text" class="form-control" value="@row["ApellidoPaterno"]">
                    </td>
                    <td>
                        <input type="text" class="form-control" value="@row["ApellidoMaterno"]">
                    </td>
                    @*<td>
                            <input type="text" class="form-control" disabled value="@row["Turno"]">
                        </td>*@
                    <td>
                        <a href="@Url.Action("DatosdelUsuario", "Administracion")/@row["Id"]" type="button" class="btn btn-info">Seleccionar</a>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
