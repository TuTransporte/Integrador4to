@using ProyectoTuTransporte.BO;
@model RegistroUsuarioBO
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MasterLogin.cshtml";
}

<div>
    <div class="form">

        <ul class="tab-group">
            <li class="tab active"><a href="#signup">Registrarse</a></li>
            <li class="tab"><a href="#login">Iniciar Sesión</a></li>
        </ul>

        <div class="tab-content">
            @Html.BeginForm("RegsitroUsuario", "FrontEnd", FormMethod.Post))
            {
            <div id="signup">
                <h1>Registro de nuevo usuario</h1>

                <form action="/" method="post">



                    <div class="field-wrap">
                        <label>
                            Nombre(s)<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(x => x.Nombre)

                    </div>

                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                                Apellido Paterno<span class="req">*</span>
                            </label>
                            @Html.TextBoxFor(x => x.ApellidoPaterno)
                        </div>

                        <div class="field-wrap">
                            <label>
                                Apellido Materno<span class="req">*</span>
                            </label>
                            @Html.TextBoxFor(x => x.ApellidoMaterno)
                        </div>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Correo Electrónico<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(x => x.Correo)
                    </div>

                    <div class="field-wrap">
                        <label>
                            Contraseña<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(x => x.Contrasena)
                    </div>
                    <div class="field-wrap">
                        <label>
                            Número Telefónico<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(x => x.Telefono)
                    </div>

                    <button type="submit" class="button button-block">Registrarse</button>

                </form>

            </div>
            }
            @Html.BeginForm("Iniciarsesion", "FrontEnd", FormMethod.Post))
            {
            <div id="login">
                <h1>¡Bienvenido de nuevo!</h1>


                <form action="/" method="post">

                    <div class="field-wrap">
                        <label>
                            Correo Electrónico<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(x => x.Correolog)
                    </div>

                    <div class="field-wrap">
                        <label>
                            Contraseña<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(x => x.Contrasenalog)
                    </div>

                    <p class="forgot"><a href="#">¿Olvidaste tu contraseña?</a></p>

                    <button class="button button-block">Iniciar Sesión</button>

                </form>

            </div>
            }
        </div><!-- tab-content -->

    </div> <!-- /form -->

</div>