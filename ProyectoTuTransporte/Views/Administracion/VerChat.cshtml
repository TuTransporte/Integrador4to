@using System.Data;
@model DataTable
@{
    ViewBag.Title = "Inicio | TuTransporte";
    Layout = "~/Views/Shared/MasterAdministracion.cshtml";
}

<center><h2 class="category">Bandeja de entrada</h2></center>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="header">
                <h4 class="title">Mensajes</h4>
                <p class="category"></p>
            </div>
            <div class="content">

                @using (Html.BeginForm("VerChat", "Administracion", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    foreach (DataRow row in Model.Rows)
                    {
                        <div class="panel panel-info">
                            <!-- Default panel contents -->
                            <div class="panel-heading">Mensaje de @row["Nombres"]</div>
                            @*<div class="panel-body">
                                    <p></p>
                                </div>*@
                            <!-- List group -->
                            <ul class="list-group">
                                <li class="list-group-item">Enviado el @row["Correo_usuario"]</li>
                            </ul>
                            <div class="list-group">
                                <br />
                                <center>

                                    @Html.ActionLink("Abrir chat", "Chat", new { personaenvia = row["Correo_usuario"] })
                                </center>
                                <br />
                            </div>
                        </div>
                    }
                }
                <div class="footer">
                    <div class="legend">
                    </div>
                    <hr>
                    <div class="stats">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
