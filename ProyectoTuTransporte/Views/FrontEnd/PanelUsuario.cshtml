
@{
    ViewBag.Title = "Panel de usuario | TuTransporte";
    Layout = "~/Views/Shared/MasterFrontLog.cshtml";
}

<h2 class="to-animate">Configuración de la cuenta</h2>
<br />
<br />
<section id="fh5co-explore" data-section="explore">
    <div class="container">
        <div class="">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Nombre(s)</label>
                            <input type="text" class="form-control" placeholder="Nombre(s) del empleado" value="@Session["Nombres"]">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Apellido paterno</label>
                            <input type="text" class="form-control" placeholder="Apellido paterno" value="@Session["ApellidoPat"]">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Apellido materno</label>
                            <input type="text" class="form-control" placeholder="Apellido materno" value="@Session["ApellidoMat"]">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6    ">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Correo</label>
                            <input type="email" class="form-control" placeholder="Correo electrónico" value="@Session["Correo"]">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Teléfono</label>
                            <input type="text" class="form-control" placeholder="Teléfono" value="@Session["Telefono"]">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-fill pull-right">Actualizar perfil</button>
            </div>
            <div class="col-md-1"></div>
            <div class="clearfix"></div>
        </div>
    </div>
</section>